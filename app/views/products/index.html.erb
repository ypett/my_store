<p id="notice"><%= notice %></p>

<div class="panel panel-default" style="font-family: Verdana, Geneva, sans-serif; padding-left: 20px; padding-right: 20px; padding-top: 20px; padding-top: 0px; margin-top: -10px;">

  <!-- Default panel contents -->
  <div class="panel-heading">

    <h1>Products</h1>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th><%= sortable "name" %></i></th>
          <th><%= sortable "price" %></th>
          <th>Quantity</th>
          <th>Description</th>
          <th><%= sortable "brand" %></th>
          <th>Rating</th>
          <th><%= sortable "category" %></th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= number_to_currency(product.price) %></td>
            <td><%= product.quantity %></td>
            <td><%= product.description %></td>
            <td><%= product.brand %></td>
            <td><%= product.rating %></td>
            <td><%= product.category.name %></td>
            <td><%= image_tag product.image.url(:thumb) %></td>
            <td><%= link_to 'Show', product, class: 'btn btn-info' %></td>
            <% if can? :update, product %>
              <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning' %></td>
              <td><%= link_to 'Destroy', product, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%#= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>

</div>
